# Environment Variables for {{PROJECT_NAME}}
# Copy this file to .env and update the values

# Database Configuration
# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mcpresso

# OAuth Configuration
# Secret key for JWT tokens - CHANGE THIS IN PRODUCTION!
JWT_SECRET=your-secure-secret-key-change-this-in-production

# Server Configuration
# Base URL of your server
SERVER_URL=http://localhost:3000

# Server port
PORT=3000

# Node environment
NODE_ENV=development

# Optional: Custom OAuth settings
# OAUTH_ISSUER will be automatically set to SERVER_URL if not provided
# OAUTH_ISSUER=http://localhost:3000

# Optional: Database connection pool settings
# DB_POOL_MIN=2
# DB_POOL_MAX=10

# Optional: Logging
# LOG_LEVEL=info 